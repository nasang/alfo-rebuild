<div class="col mb-4">
  {% if project.long_content %}
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
  {% endif %}  
    <div class="card h-100 {% if project.long_content %}hoverable{% endif %}">
      <div class="row no-gutters">
        {% if project.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" class="card-img" zoomable=true %}
          </div>
        {% endif %}
        <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ project.title }}</h3>
            <div class="card-subtitle">
            {% for i in (1..5) %}
              {% if i <= project.star %}
                <span class="full">★</span>
              {% else %}
                <span class="empty">★</span>
              {% endif %}
            {% endfor %}
            {% if project.star == 6 %}
              <span class="overflow">❤</span>
            {% endif %}
            </div>
            <p class="card-text">{{ project.description }}</p>
            <div class="card-footer">
              {{ project.date | date: '%Y.%-m.%-d'}}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% if project.long_content %}
  </a>
  {% endif %}  
</div>
